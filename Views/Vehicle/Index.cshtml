@model IEnumerable<VIS.Models.Vehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Vehicles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Model
        </th>
        <th>
            Year of Make
        </th>
        <th>
            Color
        </th>
        <th>
            Fuel Type
        </th>
        <th>
            Registration Number
        </th>
        <th>
            Inspection Due
        </th>
        <th>
            Policy Type
        </th>
        <th>
            Policy Expire Date
        </th>
        <th>
            Insurance Agency
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearOfMake)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FuelType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InspectionDue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PolicyType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PolicyExpireDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InsuranceAgency.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VehicleID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VehicleID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VehicleID })
        </td>
    </tr>
}

</table>